{
  "extends": "airbnb",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "extensions": [
              ".js"
            ],
            "modules": [
              "src",
              "migrations",
              "node_modules"
            ],
            "symlinks": false
          }
        }
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "jsx": true,
      "es6": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-console": 0,
    "max-len": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*-test.js"
        ]
      }
    ],
    "import/extensions": [
      "error",
      {
        "scss": "always"
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "../*",
          "./*",
          "!./*.scss"
        ]
      }
    ],
    "react/no-access-state-in-setstate": "error"
  },
  "plugins": [
    "react",
    "import"
  ],
  "globals": {
    "__DEVSERVER__": true,
    "__DEVCLIENT__": true
  }
}
