{
  "name": "fandom-react-boilerplate",
  "version": "1.0.0",
  "description": "A reasonable starting point for a React application",
  "repository": "https://gbenson-wikia@github.com/gbenson-wikia/fandom-react-boilerplate.git",
  "author": "Geoffrey Benson <gbenson@wikia-inc.com>",
  "license": "Apache 2.0",
  "private": true,
  "scripts": {
    "container:build": "cd .. && scripts/host_only.sh && scripts/build_container.sh",
    "container:start": "cd .. && scripts/host_only.sh && scripts/start_container.sh",
    "dev": "../scripts/container_only.sh && npm-run-all --parallel dev-client dev-server",
    "dev-client": "cross-env NODE_ENV=development node server/dev-client-hot-server.js",
    "dev-server": "cross-env NODE_ENV=development webpack --progress --colors --config ./webpack/webpack.config.dev-server.js",
    "clean": "rimraf build",
    "start:server": "webpack --config webpack/webpack-dev-server.conf.js",
    "start:client": "webpack-dev-server --config webpack/webpack-dev-client.conf.js",
    "start": "yarn clean && npm-run-all --parallel start:server start:client"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "express": "^4.16.2",
    "mime": "^2.2.0",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.1",
    "webpack": "^3.11.0",
    "webpack-dev-middleware": "^2.0.5",
    "webpack-dev-server": "^2.11.1",
    "webpack-hot-middleware": "^2.21.0"
  }
}
